<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@mipmap/denglu_bj"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/denglu_tx"
        android:src="@mipmap/wdzl_gywm_tp"
        android:scaleType="fitXY"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一修哥"
        android:id="@+id/tv_name"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textColor="#fffefe"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:background="#99d7d6"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:hint="请输入手机号"
        android:id="@+id/ev_phone"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="@null"
        android:textColorHint="#e7e5e5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:background="#99d7d6"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:hint="请输入密码"
                android:id="@+id/ev_pwd"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="@null"
                android:inputType="textPassword"
                android:textColorHint="#e7e5e5"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/fl_but_denglu"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/denglu_but_lan"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textColorHint="#e7e5e5"
                android:text="登 录"
                android:textSize="16sp"
                android:layout_gravity="center"
                />
        </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="100dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textColorHint="#e7e5e5"
            android:text="注册"
            android:id="@+id/tv_zhuce"
            android:gravity="center"
            android:textSize="16sp"
        />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textColorHint="#e7e5e5"
            android:text="忘记密码"
            android:id="@+id/tv_wjmm"
            android:paddingRight="28dp"
            android:textSize="16sp"
        />
    </LinearLayout>
</LinearLayout>