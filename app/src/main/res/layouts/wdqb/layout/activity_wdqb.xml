<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyTopBer="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zykj.yixiu.app.activity.activity_styles.MyTopBer
        android:layout_width="match_parent"
        android:layout_height="50dp"
        MyTopBer:titleText="我的钱包"
        android:padding="12dp"
        MyTopBer:leftGB="@mipmap/phon_fanhui"
        MyTopBer:titleTextSizc="10sp"
        >
    </com.zykj.yixiu.app.activity.activity_styles.MyTopBer>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <!--绿线深浅结束-->
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@mipmap/pinpai_bj"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_height="170dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/wdqb_mx"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余额 ( 元 )"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="17dp"
                    android:layout_gravity="center"
                    android:textColor="#fcfcfc"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:id="@+id/tv_yu_e"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center"
                    android:textColor="#feffff"
                    android:textSize="30sp"/>
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明细"
                android:id="@+id/tv_mx"
                android:padding="15dp"
                android:textColor="#02cccc"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="50dp">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="充值"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="#fe855c"
                android:id="@+id/but_chongzhi" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@mipmap/shu_fenge"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="提现"
                android:background="@null"
                android:textSize="16sp"
                android:id="@+id/but_tixian"
                android:textColor="#fe855c"/>
    </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <!--rlv开始-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@mipmap/pinpai_bj"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/ll_yinhangka"
                android:layout_marginBottom="5dp"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="15dp"
                    android:src="@mipmap/weixin"
                    android:scaleType="fitXY"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:textColor="#6d6d6d"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="未绑定"
                    android:gravity="right"
                    android:textSize="16sp"
                    android:textColor="#aeaeae"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:src="@mipmap/hui_fanhui"
                    android:scaleType="fitXY"/>
            </LinearLayout>
    <!--rlv开始-->
    <!--rlv开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@mipmap/pinpai_bj"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/ll_zhifubao"
        android:layout_marginBottom="5dp"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:src="@mipmap/zhifubao"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="#6d6d6d"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="未绑定"
            android:gravity="right"
            android:textSize="16sp"
            android:textColor="#b2b2b2"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@mipmap/hui_fanhui"
            android:scaleType="fitXY"/>
    </LinearLayout>



</LinearLayout>