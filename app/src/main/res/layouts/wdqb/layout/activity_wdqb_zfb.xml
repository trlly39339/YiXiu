<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyTopBer="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zykj.yixiu.app.activity.activity_styles.MyTopBer
        android:layout_width="match_parent"
        android:layout_height="50dp"
        MyTopBer:titleText="支付宝"
        MyTopBer:titleGB="#00cccc"
        android:id="@+id/biaoti"
        android:padding="12dp"
        MyTopBer:leftGB="@mipmap/phon_fanhui"
        MyTopBer:titleTextSizc="10sp"
        >
    </com.zykj.yixiu.app.activity.activity_styles.MyTopBer>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <!--绿线深浅结束-->


    <!--rlv开始-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@mipmap/pinpai_bj"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/ll_yinhangka"
                android:layout_marginBottom="5dp"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝账号"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:textColor="#6d6d6d"/>
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:background="@mipmap/shu_fenge"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="请输入您的支付宝的账号"
                    android:textSize="13sp"
                    android:singleLine="true"
                    android:inputType="number|phone|textCapSentences"
                    android:paddingLeft="10dp"
                    android:textColor="#aeaeae"
                    android:id="@+id/zhifubaozhanghao_et" />
            </LinearLayout>
    <!--rlv开始-->
    <!--rlv开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@mipmap/pinpai_bj"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/ll_zhifubao"
        android:layout_marginBottom="5dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝姓名"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="#6d6d6d"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@mipmap/shu_fenge"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="请输入您的支付宝的账号"
            android:textSize="13sp"
            android:singleLine="true"
            android:id="@+id/zhifubaoname_et"
            android:paddingLeft="10dp"
            android:textColor="#b2b2b2"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/but_queren"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@mipmap/rzxx_but"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确 认"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textSize="19sp"
            android:textColor="#feffff" />

    </FrameLayout>


</LinearLayout>