<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <!--头布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:id="@+id/xuanze_chrngshi_ll">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈尔滨"
            android:id="@+id/xianshi_chrngshi_tv"
            android:textColor="#00cccc"
            />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/main_fanhui_jiantou"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="一修哥"
            android:gravity="center|center_horizontal"
            android:textColor="#00cccc"
            android:textSize="18sp"
            />
        <ImageView
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:padding="11dp"
            android:id="@+id/grzx_img"
            android:src="@mipmap/main_tianjia_right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>

    </LinearLayout>
    <!--头布局结束-->
    <!--图片轮播开始-->
    <com.youth.banner.Banner
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/banner_main"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/banner_main"
            android:scaleType="centerCrop"/>
    </com.youth.banner.Banner>
    <!--图片轮播结束-->
    <!--手机开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@mipmap/phon_bj"
        android:id="@+id/shoujiweixiu_ll"
        android:layout_weight="1">
        <!--手机图片开始-->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="45dp"
            android:src="@mipmap/phon"/>
        <!--手机图片结束-->
        <!--手机设置开始-->
        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="0dp"
            android:layout_weight="2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机"
                android:textColor="#b6b6b6"
                android:textSize="20sp"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jian_you"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="3dp"
                    android:src="@mipmap/shizhi_you"/>

            </FrameLayout>
        </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="mobile"
                android:gravity="right"
                android:layout_margin="10dp"
                android:textColor="#e4e4e4"
                android:textSize="28sp"/>
        </LinearLayout>

    </LinearLayout>
    <!--手机结束-->
    <!--电脑开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@mipmap/phon_bj"
        android:id="@+id/diannaoweixiu_ll"
        android:layout_weight="1">

        <!--电脑设置开始-->
        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical|right"
                android:layout_height="0dp"
                android:layout_weight="2"
                >
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/jian_zuo"/>
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="25dp"
                        android:padding="3dp"
                        android:src="@mipmap/shezhi_zuo"/>

                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电脑"
                    android:textColor="#b6b6b6"
                    android:textSize="20sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="computer"
                android:layout_margin="10dp"
                android:textColor="#e4e4e4"
                android:textSize="28sp"/>
        </LinearLayout>
        <!--电脑图片开始-->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:src="@mipmap/diannao"/>
        <!--电脑图片结束-->


    </LinearLayout>
    <!--电脑结束-->
<!--家电开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@mipmap/phon_bj"
        android:id="@+id/jiadianweixiu_ll"
        android:layout_weight="1">
        <!--家电图片开始-->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="75dp"
            android:src="@mipmap/xiyiji"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:paddingLeft="30dp"
                android:paddingTop="45dp"
                android:src="@mipmap/dian_fan_bao"
                 />
        </FrameLayout>
        <!--家电图片结束-->
        <!--家电设置开始-->
        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="0dp"
                android:layout_weight="2"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="家电"
                    android:textColor="#b6b6b6"
                    android:textSize="20sp"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/jian_you"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="3dp"
                        android:src="@mipmap/shizhi_you"/>

                </FrameLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="appliance"
                android:gravity="right"
                android:layout_margin="10dp"
                android:textColor="#e4e4e4"
                android:textSize="28sp"/>
        </LinearLayout>

    </LinearLayout>
    <!--家电结束-->


</LinearLayout>
