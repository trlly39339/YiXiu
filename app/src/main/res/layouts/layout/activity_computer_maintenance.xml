<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyTopBer="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zykj.yixiu.app.activity.activity_styles.MyTopBer
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/biaoti"
        MyTopBer:titleGB="#00cccc"
        MyTopBer:titleText="电脑维修"
        android:padding="12dp"
        MyTopBer:leftGB="@mipmap/phon_fanhui"
        MyTopBer:titleTextSizc="10sp"
        >
    </com.zykj.yixiu.app.activity.activity_styles.MyTopBer>

    <!--绿线深浅-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <!--绿线深浅结束-->
    <!--品牌开始-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@mipmap/pinpai_bj"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品牌"
            android:layout_margin="15dp"
            android:textSize="20sp"
            />
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@mipmap/shu_fenge"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/ll_pinpai"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14sp"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:id="@+id/tv_pp"
                android:visibility="visible"
                android:textColor="#afadad"
                android:text="请选择品牌"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:visibility="gone"
            android:singleLine="true"
            android:id="@+id/tv_pinpai_xianshi"
            android:textColor="#02cccc"
            android:gravity="center_vertical|right"
            android:text="联想"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_margin="18dp"
            android:background="@mipmap/hui_fanhui"/>

    </LinearLayout>
    </LinearLayout>
    <!--品牌结束-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@mipmap/xian_xi"/>
    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:background="@mipmap/xian_xi"/>-->
    <!--类型开始-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:background="@mipmap/pinpai_bj"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型"
            android:layout_margin="15dp"
            android:textSize="20sp"
            />
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@mipmap/shu_fenge"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/ll_leixing"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14sp"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:id="@+id/tv_lx"
                android:visibility="visible"
                android:textColor="#afadad"
                android:text="请选择类型"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:singleLine="true"
            android:textColor="#02cccc"
            android:visibility="gone"
            android:id="@+id/tv_leixing_xianshi"
            android:gravity="center_vertical|right"
            android:text="笔记本"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_margin="18dp"
            android:background="@mipmap/hui_fanhui"/>

    </LinearLayout>
    </LinearLayout>
    <!--类型结束-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@mipmap/xian_xi"/>
    <!--型号开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:background="@mipmap/pinpai_bj"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="型号"
            android:layout_margin="15dp"
            android:textSize="20sp"
            />
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@mipmap/shu_fenge"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/ll_xinghao"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14sp"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:id="@+id/tv_xh"
                android:visibility="visible"
                android:textColor="#afadad"
                android:text="请选择型号"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="18sp"
                android:singleLine="true"
                android:textColor="#02cccc"
                android:visibility="gone"
                android:id="@+id/tv_xinghao_xianshi"
                android:gravity="center_vertical|right"
                android:text="Y460A-ITH"/>

            <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_margin="18dp"
            android:background="@mipmap/hui_fanhui"/>

    </LinearLayout>
    </LinearLayout>
    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@mipmap/xian_xi"/>-->
    <!--型号结束-->

    <!--故障开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="5dp"
        android:background="@mipmap/pinpai_bj"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="故障"
                android:layout_margin="15dp"
                android:textSize="20sp"
                />
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@mipmap/shu_fenge"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/ll_guzhang"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_gz"
                    android:visibility="visible"
                    android:textColor="#afadad"
                    android:text="请对您电脑的故障进行简单的描述"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:singleLine="true"
                    android:textColor="#02cccc"
                    android:visibility="gone"
                    android:id="@+id/tv_guzhang_xianshi"
                    android:gravity="center_vertical|right"
                    android:text="主板"/>

                <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_margin="18dp"
                android:background="@mipmap/hui_fanhui"/>
        </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@mipmap/xian_xi"/>
        <!--评价故障开始-->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:textSize="14sp"
            android:background="@null"
            android:id="@+id/ev_guzhang_xiangqing"
            android:singleLine="true"
            android:hint="开机系统进不去，黑屏白字"/>
        <!--评价故障结束-->
    </LinearLayout>
    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@mipmap/xian_xi"/>-->
    <!--故障结束-->
    <!--上传图片开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:background="@mipmap/pinpai_bj"
        >
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/fl_tianjiatupian"
            >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@mipmap/yuanquan"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@mipmap/jiahao"
                android:id="@+id/imageView" />
        </FrameLayout>

    </LinearLayout>
    <!--上传图片结束-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@mipmap/xian_xi"/>
    <!--确定开始-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="25dp"
        android:text="确 认"
        android:id="@+id/but_queren"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@mipmap/but_lan"/>
    <!--确定结束-->
</LinearLayout>