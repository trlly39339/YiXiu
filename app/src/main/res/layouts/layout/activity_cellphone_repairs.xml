<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyTopBer="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zykj.yixiu.app.activity.activity_styles.MyTopBer
        android:layout_width="match_parent"
        android:layout_height="50dp"
        MyTopBer:titleText="手机维修"
        MyTopBer:titleGB="#00cccc"
        android:id="@+id/biaoti"
        android:padding="12dp"
        MyTopBer:leftGB="@mipmap/phon_fanhui"
        MyTopBer:titleTextSizc="10sp"
        >
    </com.zykj.yixiu.app.activity.activity_styles.MyTopBer>

    <!--绿线深浅-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <!--绿线深浅结束-->
    <!--品牌开始-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@mipmap/pinpai_bj"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品牌"
            android:layout_margin="15dp"
            android:textSize="20sp"
            />
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@mipmap/shu_fenge"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/ll_pinpai"
            android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="14sp"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:id="@+id/tv_pp"
            android:visibility="visible"
            android:textColor="#afadad"
            android:text="请选择品牌"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:singleLine="true"
                android:gravity="center_vertical|right"
                android:id="@+id/tv_pinpai"
                android:textColor="#02cccc"
                android:visibility="gone"
                />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_margin="18dp"
            android:background="@mipmap/hui_fanhui"/>
        </LinearLayout>
    </LinearLayout>
    <!--品牌结束-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@mipmap/xian_xi"/>
    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:background="@mipmap/xian_xi"/>-->

    <!--型号开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:background="@mipmap/pinpai_bj"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="型号"
            android:layout_margin="15dp"
            android:textSize="20sp"
            />
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@mipmap/shu_fenge"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/ll_xinghao"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14sp"
                android:singleLine="true"
                android:visibility="visible"
                android:id="@+id/tv_xh"
                android:gravity="center_vertical"
                android:textColor="#afadad"
                android:text="请选择型号"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:singleLine="true"
                android:visibility="gone"
                android:gravity="center_vertical|right"
                android:id="@+id/tv_xinghao"
                android:textColor="#02cccc"
                />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_margin="18dp"
                android:background="@mipmap/hui_fanhui"/>
        </LinearLayout>
    </LinearLayout>
    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@mipmap/xian_xi"/>-->
    <!--型号结束-->

    <!--故障开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="5dp"
        android:background="@mipmap/pinpai_bj"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="故障"
                android:layout_margin="15dp"
                android:textSize="20sp"
                />
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@mipmap/shu_fenge"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/ll_guzhang"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:visibility="visible"
                    android:id="@+id/tv_gz"
                    android:gravity="center_vertical"
                    android:textColor="#afadad"
                    android:text="请选择故障原因"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:visibility="gone"
                    android:gravity="center_vertical|right"
                    android:id="@+id/tv_guzhang"
                    android:textColor="#02cccc"
                    />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_margin="18dp"
                    android:background="@mipmap/hui_fanhui"/>
            </LinearLayout>        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@mipmap/xian_xi"/>
        <!--评价故障开始-->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@null"
            android:id="@+id/ev_guzhang_miaoshu"
            android:textSize="14sp"
            android:singleLine="true"
            android:hint="请对您手机的故障进行简单的描述"/>
        <!--评价故障结束-->
    </LinearLayout>
    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@mipmap/xian_xi"/>-->
    <!--故障结束-->
    <!--上传图片开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:background="@mipmap/pinpai_bj"
        >
        <FrameLayout
            android:layout_width="80dp"
            android:id="@+id/fl_tianjiatupian"
            android:layout_height="80dp"
            >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/tp_img"
            android:src="@mipmap/yuanquan"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:id="@+id/tp_img_gon"
                android:src="@mipmap/jiahao"/>
        </FrameLayout>

    </LinearLayout>
    <!--上传图片结束-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@mipmap/xian_xi"/>
    <!--确定开始-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="25dp"
        android:text="确 认"
        android:id="@+id/but_queren"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@mipmap/but_lan"/>
    <!--确定结束-->
</LinearLayout>