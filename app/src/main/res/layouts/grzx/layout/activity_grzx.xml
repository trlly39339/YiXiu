<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyTopBer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="#02cccc">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/fanhui"
            android:src="@mipmap/grzx_fanhui"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人中心"
            android:layout_marginLeft="103dp"
            android:textSize="21dp"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="#02cccc">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/grzx_tx"
            android:src="@mipmap/grzx_tx"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="10dp"
                android:text="Candy"
                android:id="@+id/tv_name"
                android:textSize="17dp"
                android:textColor="#ffffff"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center|bottom"
                android:src="@mipmap/grzx_nv"
                android:id="@+id/name_image_nv"
                android:layout_marginLeft="33dp"
                android:layout_marginBottom="14dp"
                android:scaleType="fitXY"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@mipmap/grzx_tx_wrz"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="未认证"
                android:id="@+id/tv_wrz"
                android:textSize="8dp"
                android:textColor="#fea78a"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#02bdbd"
                android:gravity="center"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:id="@+id/fl_wwc"
                    >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="25dp"
                    android:paddingTop="15dp"
                    android:src="@mipmap/grzx_wwc"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="11dp"
                    android:src="@mipmap/grzx_wwc_tp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="14dp"
                    android:text="8"
                    android:textSize="8dp"
                    android:textColor="#ffffff"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:text="未完成"
                        android:textSize="14dp"
                        android:layout_margin="5dp"
                        android:textColor="#ffffff"/>
                </FrameLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#02aeae"
                android:gravity="center"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fl_ywc"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="25dp"
                        android:paddingTop="15dp"
                        android:src="@mipmap/grzx_ywc"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:text="已完成"
                        android:textSize="14dp"
                        android:layout_margin="5dp"
                        android:textColor="#ffffff"/>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#029a9a"
                android:gravity="center"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fl_yqx"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="25dp"
                        android:paddingTop="15dp"
                        android:src="@mipmap/grzx_yqx"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:text="已取消"
                        android:textSize="14dp"
                        android:layout_margin="5dp"
                        android:textColor="#ffffff"/>
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--我的资料开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_wdzl"
        android:background="@mipmap/pinpai_bj"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@mipmap/grzx_wdzl"
            android:padding="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#6b6b6b"
            android:text="我的资料"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="right"
            android:text="完善个人信息"
            android:textColor="#bcbcbc"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_margin="18dp"
            android:background="@mipmap/hui_fanhui"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7"/>
    <!--我的资料结束-->
    <!--我的钱包开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_wdqb"
        android:background="@mipmap/pinpai_bj"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@mipmap/grzx_wdqb"
            android:padding="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#6b6b6b"
            android:text="我的钱包"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="right"
            android:textColor="#bcbcbc"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_margin="18dp"
            android:background="@mipmap/hui_fanhui"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4"/>
    <!--我的钱包结束-->
    <!--地址管理开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_rzgl"
        android:background="@mipmap/pinpai_bj"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@mipmap/grzx_dzgl"
            android:padding="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#6b6b6b"
            android:text="地址管理"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="right"
            android:textColor="#bcbcbc"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_margin="18dp"
            android:background="@mipmap/hui_fanhui"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7"/>
    <!--地址管理结束-->
    <!--认证信息开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_rzxx"
        android:background="@mipmap/pinpai_bj"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@mipmap/grzx_rzxx"
            android:padding="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#6b6b6b"
            android:text="认证信息"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="right"
            android:text="未认证"
            android:textColor="#fec36c"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_margin="18dp"
            android:background="@mipmap/hui_fanhui"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7"/>
    <!--认证信息结束-->
    <!--平台服务开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/ll_ptfw"
        android:background="@mipmap/pinpai_bj"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@mipmap/grzx_ptfw"
            android:padding="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#6b6b6b"
            android:text="平台服务"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="right"
            android:textColor="#bcbcbc"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_margin="18dp"
            android:background="@mipmap/hui_fanhui"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7"/>
    <!--平台服务结束-->
    <!--我关于我们开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_gywm"
        android:background="@mipmap/pinpai_bj"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@mipmap/grzx_gywm"
            android:padding="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#6b6b6b"
            android:text="关于我们"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="right"
            android:textColor="#bcbcbc"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_margin="18dp"
            android:background="@mipmap/hui_fanhui"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7"/>
    <!--关于我们结束-->
    <!--设置开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/ll_sz"
        android:background="@mipmap/pinpai_bj"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@mipmap/grzx_sz"
            android:padding="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#6b6b6b"
            android:text="设置"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="right"
            android:textColor="#bcbcbc"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_margin="18dp"
            android:background="@mipmap/hui_fanhui"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7"/>
    <!--设置结束-->
</LinearLayout>
