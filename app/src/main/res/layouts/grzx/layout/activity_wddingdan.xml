<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyTopBer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <com.zykj.yixiu.app.activity.activity_styles.MyTopBer
        android:layout_width="match_parent"
        android:layout_height="50dp"
        MyTopBer:titleText="我的订单"
        android:padding="12dp"
        MyTopBer:leftGB="@mipmap/phon_fanhui"
        MyTopBer:titleTextSizc="10sp"
        >
    </com.zykj.yixiu.app.activity.activity_styles.MyTopBer>
    <!--绿线深浅-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <!--绿线深浅结束-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@mipmap/pinpai_bj"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="未完成"
                android:gravity="center"
                android:textColor="#03cccc"
                android:textSize="20sp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@mipmap/bi_s"
                android:visibility="visible"
                android:scaleType="fitXY"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cdcdcd"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="已完成"
                android:gravity="center"
                android:textColor="#757575"
                android:textSize="20sp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@mipmap/bi_s"
                android:visibility="invisible"
                android:scaleType="fitXY"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cdcdcd"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="已取消"
                android:gravity="center"
                android:textColor="#757575"
                android:textSize="20sp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:visibility="invisible"
                android:src="@mipmap/bi_s"
                android:scaleType="fitXY"/>
        </LinearLayout>
        </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/grzx_rlv">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
