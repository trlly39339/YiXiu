<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyTopBer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <com.zykj.yixiu.app.activity.activity_styles.MyTopBer
        android:layout_width="match_parent"
        android:layout_height="50dp"
        MyTopBer:titleText="支付"
        MyTopBer:titleGB="#00cccc"
        android:padding="12dp"
        MyTopBer:leftGB="@mipmap/phon_fanhui"
        MyTopBer:titleTextSizc="10sp"
        >
    </com.zykj.yixiu.app.activity.activity_styles.MyTopBer>
    <!--绿线深浅-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <!--绿线深浅结束-->
    <!--品牌-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@mipmap/pinpai_bj"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="种类 : "
                android:layout_marginLeft="20dp"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="手机"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-07-09"
                android:layout_marginLeft="10dp"
                android:textColor="#aeaeae"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="13:00"
                android:textColor="#9e9e9e"
                android:textSize="16sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e1dede"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="600"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#ff8157"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="14dp"
                android:layout_marginRight="20dp"
                android:textColor="#ff8157"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="选择付款方式"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:textColor="#959595"
        android:textSize="16sp"/>

<!--支付————————————————————宝-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:background="@mipmap/pinpai_bj"
        android:paddingLeft="20dp"
        android:layout_height="60dp">
       <ImageView
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:src="@mipmap/zhifubao"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:layout_marginLeft="5dp"
            android:textColor="#525252"
            android:textSize="18sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#d2d2d2"
        />
    <!--微信————————————————————宝-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:background="@mipmap/pinpai_bj"
       android:paddingLeft="20dp"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/weixin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:layout_marginLeft="5dp"
            android:textColor="#525252"
            android:textSize="18sp"/>
    </LinearLayout>
    <!--故障-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="45dp"
        android:gravity="center_vertical"
        android:background="#ffffffff"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额 ："
            android:textColor="#ff8157"
            android:layout_marginLeft="30dp"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="600"
            android:textColor="#ff8157"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="元"
            android:layout_marginLeft="3dp"
            android:textColor="#ff8157"
            android:textSize="18sp"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:paddingRight="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@mipmap/grzx_dingdanzhifu_but_s"
                android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="18sp"/>
        </FrameLayout>

    </LinearLayout>
</LinearLayout>
