<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:id="@+id/ll_item"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:background="@mipmap/pinpai_bj"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李雪剑"
            android:id="@+id/name_tv"
            android:layout_margin="15dp"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="18978789921"
            android:gravity="right"
            android:id="@+id/phone_tv"
            android:layout_margin="15dp"
            android:textSize="18sp"
            />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:id="@+id/dizhi_tv"
            android:text="黑龙江省哈尔滨市道里区安广街7号永平小区7单元409室"
            android:textSize="16sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e6e4e4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="默认"
                android:id="@+id/moren_rb"
                android:textColor="#ff4182"
                android:textSize="16sp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:layout_weight="1"></View>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|right"
                    android:scaleType="fitXY"
                    android:src="@mipmap/grzx_item_but"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编辑"
                    android:gravity="right"
                    android:layout_margin="15dp"
                    android:layout_gravity="center_vertical|center"
                    android:textSize="16sp"
                    android:id="@+id/bianji_tv" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                 android:layout_marginLeft="10dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|right"
                    android:scaleType="fitXY"
                    android:src="@mipmap/grzx_item_but"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除"
                    android:gravity="right"
                    android:layout_margin="15dp"
                    android:layout_gravity="center_vertical|center"
                    android:textSize="16sp"
                    android:id="@+id/shanchu_tv" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
    <!--品牌结束-->
</LinearLayout>