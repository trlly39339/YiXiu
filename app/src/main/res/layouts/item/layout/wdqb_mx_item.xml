<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--rlv开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@mipmap/pinpai_bj"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_height="60dp">
        <LinearLayout
            android:layout_width="120dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20160617"
                android:id="@+id/tv_date"
                android:textSize="16sp"
                android:textColor="#d4d4d4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:00"
                android:id="@+id/tv_xitong_shijian"
                android:textSize="16sp"
                android:textColor="#d4d4d4"/>
        </LinearLayout>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@mipmap/shu_fenge"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型 :"
                    android:id="@+id/tv_leixing"
                    android:textSize="16sp"
                    android:textColor="#ababab"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机"
                    android:id="@+id/tv_leixing_zhonglei"
                    android:textSize="16sp"
                    android:textColor="#ababab"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-159.00"
                android:id="@+id/tv_danjia"
                android:textSize="18sp"
                android:textColor="#525252"/>
        </LinearLayout>
    </LinearLayout>
    <!--rlv开始-->
</LinearLayout>