<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyTopBer="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zykj.yixiu.app.activity.activity_styles.MyTopBer
        android:layout_width="match_parent"
        android:layout_height="50dp"
        MyTopBer:titleText="我的资料"
        android:id="@+id/biaoti"
        MyTopBer:titleGB="#00cccc"
        android:padding="12dp"
        MyTopBer:leftGB="@mipmap/phon_fanhui"
        MyTopBer:titleTextSizc="10sp"
        >
    </com.zykj.yixiu.app.activity.activity_styles.MyTopBer>

    <!--绿线深浅-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <!--绿线深浅结束-->
    <!--品牌开始-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/wdzl_genggaitx_ll"
        android:background="@mipmap/pinpai_bj"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:layout_margin="15dp"
            android:textSize="20sp"
            />
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right|center_vertical"
            android:scaleType="fitXY"
            android:id="@+id/wdzl_tx_img"
            android:src="@mipmap/wdzl_tx_bj"/>

            <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="right|center_vertical"
            android:src="@mipmap/wdzl_tx_ren"
            android:id="@+id/wdzl_gong_img" />
        </FrameLayout>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_margin="18dp"
            android:background="@mipmap/hui_fanhui"/>

    </LinearLayout>
    <!--品牌结束-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e4e4"/>
    <!--品牌开始-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:background="@mipmap/pinpai_bj"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:layout_margin="15dp"
            android:textSize="20sp"
            />
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@mipmap/shu_fenge"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:textSize="16sp"
            android:gravity="right|center_vertical"
            android:id="@+id/ev_name"
            android:singleLine="true"
            android:hint="请输入您的姓名"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_margin="18dp"
            android:background="@mipmap/hui_fanhui"/>

    </LinearLayout>
    <!--品牌结束-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e4e4"/>
    <!--品牌开始-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:background="@mipmap/pinpai_bj"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:layout_margin="15dp"
            android:textSize="20sp"
            />
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@mipmap/shu_fenge"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="80dp"
            android:layout_height="match_parent">
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/rb_nan"
                android:checked="true"
                android:text="男"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/rb_nv"
                android:layout_height="wrap_content"
                android:text="女"
                android:textSize="18sp"/>

        </RadioGroup>
    </LinearLayout>
    <!--品牌结束-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e4e4"/>
    <!--品牌开始-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:background="@mipmap/pinpai_bj"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机"
            android:layout_margin="15dp"
            android:textSize="20sp"
            />
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@mipmap/shu_fenge"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:gravity="center_vertical|right"
            android:text="18947893453"
            android:background="@null"
            android:singleLine="true"
            android:autoLink="phone"
            android:id="@+id/et_phone_h" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_margin="18dp"

            android:background="@mipmap/hui_fanhui"/>


    </LinearLayout>
    <!--品牌结束-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e4e4"/>
    <!--品牌开始-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:background="@mipmap/pinpai_bj"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地区"
            android:layout_margin="15dp"
            android:textSize="20sp"
            />
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@mipmap/shu_fenge"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:id="@+id/ll_diqu"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="黑龙江"
            android:id="@+id/tv_sheng"
            android:gravity="right"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈尔滨"
            android:id="@+id/tv_shi"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_margin="18dp"
            android:background="@mipmap/hui_fanhui"/>
        </LinearLayout>
    </LinearLayout>
    <!--品牌结束-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e4e4"/>
    <!--确定开始-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="25dp"
        android:text="确认上传"
        android:id="@+id/but_queren"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@mipmap/but_lan"/>
    <!--确定结束-->



</LinearLayout>