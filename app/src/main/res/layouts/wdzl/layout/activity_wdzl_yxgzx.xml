<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyTopBer="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <com.zykj.yixiu.app.activity.activity_styles.MyTopBer
        android:layout_width="match_parent"
        android:layout_height="50dp"
        MyTopBer:titleText="一休哥资讯"
        MyTopBer:titleGB="#00cccc"
        android:padding="12dp"
        MyTopBer:leftGB="@mipmap/phon_fanhui"
        MyTopBer:titleTextSizc="10sp"
        >
    </com.zykj.yixiu.app.activity.activity_styles.MyTopBer>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <!--绿线深浅结束-->
    <!--获取系统时间-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="23dp"
            android:layout_gravity="center"
            android:src="@mipmap/wdzl_yxgzx_xtsj_bj"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:30"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="#fffefe"/>
    </FrameLayout>
    <!--获取系统时间结束-->

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@mipmap/wdzl_yxgzx_bj"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:padding="15dp"
                    android:layout_height="180dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/wdzl_yxgzx_gg"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="一休哥在售，快捷生活轻松拥有 !"
                        android:background="#000000"
                        android:layout_gravity="bottom"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:textColor="#fffefe"/>
                </FrameLayout>
                <!--第一条app新闻-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d9d9d9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="手机为什么会黑屏，教你平时的保养技巧 ！"
                        android:layout_marginLeft="10dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textSize="13sp"
                        android:textColor="#6d6d6d"/>
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="15dp"
                        android:src="@mipmap/wdzl_yxgzx_tp"
                        android:scaleType="fitXY"/>
                </LinearLayout>
                <!--第一条app新闻-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d9d9d9"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="家电坏了怎么办，我们在家里用家电应该注意什么？"
                        android:maxLines="2"
                        android:layout_marginLeft="10dp"
                        android:ellipsize="end"
                        android:textSize="13sp"
                        android:textColor="#6d6d6d"/>
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="15dp"
                        android:visibility="invisible"
                        android:src="@mipmap/wdzl_yxgzx_tp"
                        android:scaleType="fitXY"/>
                </LinearLayout>
                <!--第一条app新闻-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d9d9d9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="三个品牌的手机，你知道那个最容易死机？你中招了吗？"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginLeft="10dp"
                        android:textSize="13sp"
                        android:textColor="#6d6d6d"
                        android:id="@+id/textView" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="15dp"
                        android:src="@mipmap/wdzl_yxgzx_tp_er"
                        android:scaleType="fitXY"/>
                </LinearLayout>
            </LinearLayout>
    <!--rlv开始-->

</LinearLayout>