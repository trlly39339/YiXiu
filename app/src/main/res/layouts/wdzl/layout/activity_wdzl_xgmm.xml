<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyTopBer="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zykj.yixiu.app.activity.activity_styles.MyTopBer
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/biaoti"
        MyTopBer:titleText="修改密码"
        MyTopBer:titleGB="#00cccc"
        android:padding="12dp"
        MyTopBer:leftGB="@mipmap/phon_fanhui"
        MyTopBer:titleTextSizc="10sp"
        >
    </com.zykj.yixiu.app.activity.activity_styles.MyTopBer>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <!--绿线深浅结束-->
    <!--rlv开始-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@mipmap/pinpai_bj"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/ll_xgmm"
                android:layout_marginBottom="5dp"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新密码    "
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:textColor="#6d6d6d"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:id="@+id/et_xmm"
                    android:textSize="14sp"
                    android:layout_height="match_parent"
                    android:hint="请输入新密码"
                    android:background="@null"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    />
            </LinearLayout>
    <!--rlv开始-->

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@mipmap/pinpai_bj"
        android:gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:id="@+id/ll_xxtz"
        android:paddingLeft="10dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="#6c6c6c"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:id="@+id/et_qrxmm"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:background="@null"
            android:hint="请再次输入新密码"
            android:singleLine="true"
            android:inputType="textPassword"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/fl_qr_but"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@mipmap/rzxx_but"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:textColor="#feffff" />

    </FrameLayout>

</LinearLayout>