<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyTopBer="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zykj.yixiu.app.activity.activity_styles.MyTopBer
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/biaoti"
        MyTopBer:titleText="认证信息"
        MyTopBer:titleGB="#00cccc"
        android:padding="12dp"
        MyTopBer:leftGB="@mipmap/phon_fanhui"
        MyTopBer:titleTextSizc="10sp"
        >
    </com.zykj.yixiu.app.activity.activity_styles.MyTopBer>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <!--绿线深浅结束-->
    <!--rlv开始-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="手持身份证认证"
        android:paddingLeft="25dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textColor="#ff9a34"/>
    <!--身份证正面-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@mipmap/pinpai_bj"
                android:layout_marginTop="3dp"
                android:layout_height="150dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:src="@mipmap/xiangji"
                    android:scaleType="fitXY"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正面"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    android:textColor="#13cece"/>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/fl_sfz_zm"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="280dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:id="@+id/img_sfz_zm"
                        android:src="@mipmap/rzxx_tj_bj_fang"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:layout_gravity="center"
                        android:id="@+id/img_sfz_zm_gon"
                        android:src="@mipmap/rzxx_tj_bj_yuan"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/img_sfz_zm_gong"
                        android:src="@mipmap/rzxx_tj_bj_jh"
                        android:scaleType="fitXY"/>
                </FrameLayout>

            </LinearLayout>

    <!--身份证反面-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/pinpai_bj"
        android:layout_marginTop="8dp"
        android:layout_height="150dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:src="@mipmap/xiangji"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正面"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:textColor="#13cece"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/fl_sfz_fm"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="280dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:id="@+id/img_sfz_fm"
                android:src="@mipmap/rzxx_tj_bj_fang"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/img_sfz_fm_gon"
                android:src="@mipmap/rzxx_tj_bj_yuan"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/img_sfz_fm_gong"
                android:src="@mipmap/rzxx_tj_bj_jh"
                android:scaleType="fitXY"/>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/fl_but_tj"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@mipmap/rzxx_but"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:textColor="#feffff" />

    </FrameLayout>
</LinearLayout>