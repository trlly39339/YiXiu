<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyTopBer="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zykj.yixiu.app.activity.activity_styles.MyTopBer
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/biaoti"
        MyTopBer:titleText="平台服务"
        MyTopBer:titleGB="#00cccc"
        android:padding="12dp"
        MyTopBer:leftGB="@mipmap/phon_fanhui"
        MyTopBer:titleTextSizc="10sp"
        >
    </com.zykj.yixiu.app.activity.activity_styles.MyTopBer>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bj_q"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/bi_s"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <!--绿线深浅结束-->
    <!--rlv开始-->

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@mipmap/pinpai_bj"
        android:gravity="center_vertical"
        android:id="@+id/ll_yixiuzixun"
        android:layout_marginBottom="5dp"
        android:layout_height="60dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/wdzl_fwpt_yxgzx_huang"
                android:scaleType="fitXY"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="一休哥资讯"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textColor="#6d6d6d"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:id="@+id/yixiuzixun_shuliang_gon_fl"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@mipmap/wdzl_fwpt_yxgzx_paopao"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/yixiuzixun_shuliang_tv"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="#fffefe"/>
        </FrameLayout>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@mipmap/hui_fanhui"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <!--rlv开始-->

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@mipmap/pinpai_bj"
        android:gravity="center_vertical"
        android:id="@+id/changjianwenti_ll"
        android:layout_marginBottom="5dp"
        android:layout_height="60dp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/wdzl_fwpt_cjwt_bj_lan"
            android:scaleType="fitXY"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:padding="8dp"
                android:src="@mipmap/wdzl_fwpt_cjwt"
                android:scaleType="fitXY"/>
        </FrameLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="常见问题"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textColor="#6d6d6d"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@mipmap/hui_fanhui"
            android:scaleType="fitXY"/>
    </LinearLayout>

</LinearLayout>